{
  "name": "briefkasten",
  "description": "Self-hosted Bookmarks Management Application",
  "author": "ndom91 <yo@ndo.dev>",
  "version": "0.5.0",
  "license": "MIT",
  "keywords": [
    "next.js",
    "prisma",
    "bookmarks",
    "selfhost"
  ],
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:local": "vercel dev --listen 3001",
    "prebuild": "npx prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.4",
    "@next-auth/prisma-adapter": "^1.0.3",
    "@prisma/client": "^3.15.1",
    "@sentry/nextjs": "^7.1.1",
    "chrome-aws-lambda": "^9.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "framer-motion": "^6.3.11",
    "imagekit": "^3.2.5",
    "metascraper": "^5.29.8",
    "metascraper-description": "^5.29.7",
    "metascraper-image": "^5.29.7",
    "metascraper-title": "^5.29.7",
    "next": "12.1.6",
    "next-auth": "^4.4.0",
    "nodemailer": "^6.7.5",
    "puppeteer-core": "^14.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-use": "^17.4.0",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "autoprefixer": "^10.4.7",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^13.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prisma": "^3.15.1",
    "simple-git-hooks": "^2.8.0",
    "tailwindcss": "^3.1.2",
    "tailwindcss-animate": "^1.0.5",
    "vercel": "^25.1.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "next",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@next/next/no-img-element": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowSpacing": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
